ARG BASE=centos:7
FROM ${BASE} AS yum
RUN yum install -y \
	which \
	git \
	libarchive \
	cmake \
	gcc \
	gcc-c++ \
	make \
	openssl-devel \
	openssh-server \
	git-daemon \
	java-1.8.0-openjdk-headless \
	sudo \
	python

FROM yum AS libssh2
RUN cd /tmp && \
    curl https://libssh2.org/download/libssh2-1.8.0.tar.gz | tar -xz && \
    cd libssh2-1.8.0 && \
    ./configure && \
    make && \
    make install

FROM libssh2 AS cmake
RUN cd /tmp && \
    curl -L https://github.com/Kitware/CMake/releases/download/v3.21.1/cmake-3.21.1.tar.gz | tar -xz && \
    cd cmake-3.21.1 && \
    ./configure && \
    make && \
    make install

FROM libssh2 AS adduser
RUN useradd --shell /bin/bash libgit2 --create-home

FROM adduser AS configure
ENV PKG_CONFIG_PATH /usr/local/lib/pkgconfig
RUN mkdir /var/run/sshd
